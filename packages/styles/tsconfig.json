{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@components/*": [
                "components/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "DOM",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        "sourceMap": true,
        "strict": true,
        "target": "ES6"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
